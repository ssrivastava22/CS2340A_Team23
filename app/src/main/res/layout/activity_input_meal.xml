<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/visualizeButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualization1"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="457dp" />

    <Button
        android:id="@+id/visualizeButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualization2"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/InputMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Meal Name"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="147dp" />

    <EditText
        android:id="@+id/InputCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Calories"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="205dp" />

    <EditText
        android:id="@+id/InputDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Date (MM/DD/YYYY) "
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/InputMealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Meal"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="322dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        app:labelVisibilityMode="labeled"
        app:layout_anchor="@+id/frame_layout"
        app:layout_anchorGravity="bottom|center"
        app:menu="@menu/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>